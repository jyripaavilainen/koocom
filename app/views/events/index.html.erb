<h1>Tulevat komiikkatapahtumat</h1>

<div class="event-listing">
    <% if organizer_signed_in? %>
        <%= link_to 'Uusi tapahtuma', new_event_path, class: "btn btn-info btn-large" %>
    <% end %>  

    <div class="row">
        <div class="span3 sidebar-blue">

            <%= form_for Search.new do |f| %>
            <%= f.error_messages %>

              <div class="search-box sidebar no-margin">
                <div class="search-comedian-container sidebar">
                  <%= f.text_field :comedian, :placeholder => "Ketä katsomaan?", class: "placeholder" %>
                </div>
                <div class="search-city-container sidebar">
                  <%= f.text_field :city, :placeholder => "Missä kaupungissa?", class: "placeholder" %>
                </div>
                <div class="search-date-container sidebar">
                  <%= f.text_field :date, :placeholder => "Minä päivänä?", class: "datepicker placeholder" %>
                </div>
                <div class="search-submit-container sidebar">
                  <%= f.submit "Etsi" %>
                </div>
                <div class="clear"></div>
              </div>

            <% end %>

        </div>
        <div class="span9 event-search-content">

        <% @events.each do |event| %>

            <div class="event-container">
                <div class="row">
                    <div class="span1 event-date">
                        <span class="badge badge-event-date"><%= event.date.to_formatted_s(:fi) %></span>
                    </div>
                    <div class="span6">
                        <div class="event-name">
                            <h2><%= link_to event.name, event %></h2>
                        </div>
                        <div class="event-venue">
                            <p><%= event.venue %>, <%= event.city %></p>
                        </div>
                    </div>
                    <div class="span2 event-tickets">
                        <p><%= event.price %> €</p>
                    </div>
                </div>
                <div class="row">
                    <div class="span7 offset1">
                        <hr style="margin:0; padding: 0;" />
                    </div>
                </div>
            </div>

        <% end %>

    </div>

</div>
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> virhe tapahtui ja tapahtumaa ei tallennettu:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>Tapahtuman nimi</p>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <p>Tapahtumapaikka</p>
    <%= f.text_field :venue %>
  </div>

  <div class="field">
    <p>Kaupunki</p>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <p>Päivämäärä</p>
    <%= f.text_field :date %>
  </div>

  <div class="field">
    <p>Alku- ja loppuaika (xx:xx)</p>
    <p><%= f.text_field :start_time %> - <%= f.text_field :end_time %>
  </div>

  <div class="field">
    <p>Lippujen hinta</p>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <p>Kuvaus (koomikot jne.)</p>
    <%= f.text_area :description %>
  </div>

  <div class="form-actions">
    <%= f.submit "Lisää tapahtuma" %>
  </div>
<% end %>

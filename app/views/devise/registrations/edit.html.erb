<% content_for :head do %>
  <title>Muokkaa profiilia | Koomikot.com</title>
<% end %>

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Odotamme edelleen vastausta tähän vahvistusviestiin: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :autocomplete => "off", :hint => "Jätä salasanakenttä tyhjäksi, ellet halua vaihtaa salasanaasi", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "Nykyinen salasana vaaditaan vaihtaaksesi salasanasi", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Päivitä profiili" %>
  </div>
<% end %>

<h3>Poista käyttäjätunnus</h3>

<p>Etko halua enää lisätä tapahtumia? <%= link_to "Poista käyttäjätunnus", registration_path(resource_name), :data => { :confirm => "Oletko ihan varma? Vielä ehtii muuttaa mielensä." }, :method => :delete %></p>

<%= link_to "Palaa takaisin", :back %>
